<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plew.android.simpleracketdb" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/srdb_racket"
        android:label="@string/app_name"
        android:theme="@style/MyActionBarTheme" >
        <activity
            android:name=".RacketListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RacketActivity"
            android:label="@string/app_name"
            android:parentActivityName=".RacketListActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RacketListActivity" />
        </activity>
        <activity
            android:name=".StrngDataActivity"
            android:label="@string/app_name"
            android:parentActivityName=".RacketActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RacketActivity" />
        </activity>
        <activity
            android:name=".UsageDataActivity"
            android:label="@string/app_name"
            android:parentActivityName=".StrngDataActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StrngDataActivity" />
        </activity>
    </application>

</manifest>
